<div class="row">
  <div class="col">
    <h1 class="mt-1">Users
      <span class="float-right">
        <%= link_to("New", new_user_path, class: "btn btn-primary") %>
      </span>
    </h1>

    <table class="table table-striped">
      <thead>
        <th>Avatar</th>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </thead>
      <tbody>
        <%= render(@users) %>
      </tbody>
    </table>
  </div>
</div>
